#!/bin/sh
set -e
case "$1" in
  remove)
    rm -f /usr/bin/beyondsqlexecutor || true
  ;;
  purge)
    rm -f /usr/bin/beyondsqlexecutor || true
    rm -f /usr/share/applications/es-jklabs-BeyondSQLExecutor.desktop || true
    rm -f /usr/share/metainfo/beyondsqlexecutor-BeyondSQLExecutor.metainfo.xml || true
    rm -f /usr/share/icons/hicolor/256x256/apps/beyondsqlexecutor.png || true
    command -v update-desktop-database >/dev/null 2>&1 && update-desktop-database -q || true
    command -v gtk-update-icon-cache >/dev/null 2>&1 && gtk-update-icon-cache -q /usr/share/icons/hicolor || true
  ;;
  upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    :
  ;;
esac
exit 0
